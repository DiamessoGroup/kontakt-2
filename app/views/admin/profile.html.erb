<% content_for :sub_title do %>
	My Profile
<% end %>

<div class="w3-row-padding w3-stretch">
	<!-- Profile Side -->
	<div class="w3-col l4 w3-margin-bottom" id="profile">
		<div class="w3-white w3-text-black w3-card">
			<br>
			<% if @user.profile.present? %>
				<h3 class="w3-center"><%= @user.profile.full_name %></h3>
			<% else %>
				<h3 class="w3-center">Create Your Profile</h3>
			<% end %>
			<div class="w3-center w3-container">
				<img src="" alt="Avatar" class="w3-card w3-padding mainAvatarSize">
			</div>
			<hr>
			<div class="w3-center w3-container w3-row">
				<div class="w3-col l4 s4">
					<% if @user.profile.nil? %>
						<%= link_to new_user_profile_path(@user), { :remote => true, 'data-toggle' => "modal", 'data-target' => '#modal-window' } do %>
							<i class="fa fa-pencil w3-text-green" style="font-size:25px; cursor:pointer"></i><br><br>
						<% end %>
						<span>Create Profile</span>
					<% else %>
						<%= link_to edit_user_profile_path(@user, @user.profile), { :remote => true, 'data-toggle' => "modal", 'data-target' => '#modal-window' } do %>
							<i class="fa fa-pencil w3-text-green" style="font-size:25px; cursor:pointer"></i><br><br>
						<% end %>
						<span>Edit Profile</span>
					<% end %>
				</div>
				<div class=" w3-col l4 s4">
					<i class="fa fa-thumbs-up favoriteThumb" id="favorite"></i><br><br>
					<span>Favorite</span>
				</div>
				<div class="w3-col l4 s4">
					<i class="fa fa-trash w3-text-orange" style="font-size:25px; cursor:pointer;"></i><br><br>
					<span>Delete Profile</span>
				</div>
			</div>
			<hr>
			<div class="w3-container">
				<p>
					<i class="fa fa-briefcase fa-fw w3-margin-right w3-large w3-text-indigo"></i><span><%= @user.profile.title if @user.profile.present? %></span>
				</p>
				<p>
					<i class="fa fa-building fa-fw w3-margin-right w3-large w3-text-indigo"></i><span><%= @user.profile.company if @user.profile.present? %></span>
				</p>
				<p>
					<i class="fa fa-phone fa-fw w3-margin-right w3-large w3-text-indigo"></i><span><%= @user.profile.phone if @user.profile.present? %></span>
				</p>
				<p>
					<i class="fa fa-location-arrow fa-fw w3-margin-right w3-large w3-text-indigo"></i><span><%= @user.profile.full_address if @user.profile.present? %></span>
				</p>
			</div>
		</div>
	</div>
	<!-- End Profile Side -->

	<!-- Content Side -->
	<div class="w3-col l8">
		<!--TODO Fix Close Button On Card-->
		<!-- History Tab -->
		<div class="w3-container w3-card-2 w3-white w3-margin-bottom" id="reminder">
			<h2 class="w3-text-indigo w3-padding-16">History</h2>
			<div class="w3-container w3-card w3-margin-bottom panelCardNote w3-display-container alert alert-dismissible fade show" role="alert">
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				<h5 class="w3-opacity"><b>Note</b></h5>
				<p>First Call with John was very pleasant. Their company is going through a merger that should be
					completed
					in a couple of months.</p>
			</div>

			<div class="w3-container w3-card w3-margin-bottom panelCardNote alert alert-dismissible fade show" role="alert">
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				<h5 class="w3-opacity"><b>Note</b></h5>
				<p>John was introduced by Audrey at the convention.</p>
			</div>
			<div class="w3-container w3-card w3-margin-bottom panelCardReminder">
				<h5 class="w3-opacity"><b>Reminder</b></h5>
				<p>Business dinner with John @ Red Lobster on September 23, 2017 at 07:00 pm.</p>
			</div>
		</div>
		<!-- End History Tab -->

		<!-- Notes Tab -->
		<div class="w3-container w3-card-2 w3-white w3-margin-bottom">
			<h2 class="w3-text-indigo w3-padding-16">Notes</h2>
			<textarea name="note" id="" cols="80" rows="5" class="w3-margin-bottom w3-padding noteTabText"></textarea>
			<button type="submit" class="w3-btn buttonColorTheme">Add Note</button>
			<hr>
			<div class="w3-container w3-card w3-margin-bottom w3-padding-16 panelCardNote">
				<p>John was introduced by Audrey at the convention.</p>
			</div>
		</div>
		<!-- End Notes Tab -->

	</div>
	<!-- End Content Side -->

