<% content_for :sub_title do %>
	View Contact
<% end %>

<div class="w3-row-padding w3-stretch">
	<!-- Profile Side -->
	<div class="w3-col l4 w3-margin-bottom" id="profile">
		<div class="w3-white w3-text-black w3-card">
			<br>
			<h3 class="w3-center"><%= @contact.full_name %></h3>
			<!--			<div class="w3-center w3-container">-->
			<!--				<img src="" alt="Avatar" class="w3-card w3-padding mainAvatarSize">-->
			<!--			</div>-->
			<hr>
			<div class="w3-center w3-container w3-row">
				<div class="w3-col l4 s4">
					<%= link_to edit_user_contact_path(@user, @contact) do %>
						<i class="fa fa-pencil w3-text-green" style="font-size:25px; cursor:pointer"></i><br><br>
						<span>Edit Profile</span>
					<% end %>
				</div>
				<div class="w3-col l4 s4">
					<i class="fa fa-thumbs-up favoriteThumb <%= "w3-text-red" if @contact.favorite == true %>" id="favorite"></i><br><br>
					<span>Favorite</span>
				</div>
				<div class="w3-col l4 s4">
					<%= link_to user_contact_path(@user, @contact), method: :delete, data: { confirm: "Are you sure?" } do %>
						<i class="fa fa-trash w3-text-orange" style="font-size:25px; cursor:pointer;"></i><br><br>
						<span>Delete Profile</span>
					<% end %>
				</div>
			</div>
			<hr>
			<div class="w3-container">
				<p>
					<i class="fa fa-briefcase fa-fw w3-margin-right w3-large w3-text-indigo"></i><span><%= @contact.title %></span>
				</p>
				<p>
					<i class="fa fa-building fa-fw w3-margin-right w3-large w3-text-indigo"></i><span><%= @contact.company %></span>
				</p>
				<p>
					<i class="fa fa-phone fa-fw w3-margin-right w3-large w3-text-indigo"></i><span><%= @contact.phone %></span>
				</p>
				<p>
					<i class="fa fa-location-arrow fa-fw w3-margin-right w3-large w3-text-indigo"></i><span><%= @contact.address %></span>
				</p>
				<p>
					<span><%= "<i class='fa fa-thumbs-up fa-fw w3-margin-right w3-large w3-text-indigo'></i>".html_safe + @contact.first_name + " is a favorite contact" if @contact.favorite == true %></span>
				</p>
			</div>
		</div>
	</div>
	<!-- End Profile Side -->

	<!-- Side Information -->
	<div class="w3-col l8 w3-margin-bottom">
		<div class="w3-container w3-card w3-white">
			<h2 class="w3-text-grey w3-padding-16">
				<i class="fa fa-id-card fa-fw w3-margin-right w3-xxlarge w3-text-black"></i>Your Contact
				- <%= @contact.full_name %>
			</h2>
			<div class="w3-container">
				<h5 class="w3-opacity"><b>First Name:</b></h5>
				<p><%= @contact.first_name %></p>
			</div>
			<div class="w3-container">
				<h5 class="w3-opacity"><b>Last Name:</b></h5>
				<p><%= @contact.last_name %></p>
			</div>
			<div class="w3-container">
				<h5 class="w3-opacity"><b>Email:</b></h5>
				<p><%= @contact.email %></p>
			</div>
			<div class="w3-container">
				<h5 class="w3-opacity"><b>Phone:</b></h5>
				<p><%= @contact.phone %></p>
			</div>
			<div class="w3-container">
				<h5 class="w3-opacity"><b>Address:</b></h5>
				<p><%= @contact.address %></p>
			</div>
			<div class="w3-container">
				<h5 class="w3-opacity"><b>Title:</b></h5>
				<p><%= @contact.title %></p>
			</div>
			<div class="w3-container">
				<h5 class="w3-opacity"><b>Company:</b></h5>
				<p><%= @contact.company %></p>
			</div>
			<div class="w3-container">
				<h5 class="w3-opacity"><b>Contact Created:</b></h5>
				<p>You created this contact <%= time_ago_in_words(@contact.created_at) %>
					ago on <%= @contact.created_at.strftime("%B %d, %Y") %>.</p>
			</div>
		</div>
	</div>
	<!-- End Side Information -->
</div>