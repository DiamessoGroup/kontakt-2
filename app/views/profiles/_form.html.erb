<%= render 'error_profile' %>
<div class="row g-3">
  <div class="col-sm-6">
    <%= form.label :first_name, class: "form-label" %><span class="w3-tiny"> *required</span>
    <%= form.text_field :first_name, class: 'form-control' %>
  </div>

  <div class="col-sm-6">
    <%= form.label :last_name, class: "form-label" %><span class="w3-tiny"> *required</span>
    <%= form.text_field :last_name, class: 'form-control' %>
  </div>

  <div class="col-sm-6">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="col-sm-6">
    <%= form.label :company, class: "form-label" %>
    <%= form.text_field :company, class: 'form-control' %>
  </div>

  <div class="col-12">
    <%= form.label :phone, class: "form-label" %>
    <%= form.text_field :phone, class: 'form-control' %>
  </div>

  <div class="col-12">
    <%= form.label :address, class: "form-label" %>
    <%= form.text_field :address, class: 'form-control' %>
  </div>

  <div class="col-md-5">
    <%= form.label :city, class: "form-label" %>
    <%= form.text_field :city, class: 'form-control' %>
  </div>

  <div class="col-md-4">
    <%= form.label :state, class: "form-label" %>
    <%= form.text_field :state, class: 'form-control' %>
  </div>

  <div class="col-md-3">
    <%= form.label :zip_code, class: "form-label" %>
    <%= form.text_field :zip_code, class: 'form-control' %>
  </div>
  <div class="col-md-3">
    <%= form.label :avatar %>
    <%= form.file_field :avatar %>
  </div>
  <p>
    <%= form.submit class: "w-100 btn btn-primary btn-lg" %>
  </p>
</div>
